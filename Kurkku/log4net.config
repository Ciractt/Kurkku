<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
  </root>
  <appender name="console" type="Kurkku.Util.Logging.ConsoleAppenderWithColorSwitching, Kurkku">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="|Gray|[|DarkGray|%date|Gray|] %level %logger - %message%newline" />
    </layout>
  </appender>
  <appender name="empty" type="Kurkku.Util.Logging.EmptyAppender, Kurkku">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date% %level %logger - %message%newline" />
    </layout>
  </appender>
  <appender name="NHibernateFileLog" type="log4net.Appender.FileAppender">
    <file value="logs/nhibernate.txt" />
    <appendToFile value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{HH:mm:ss.fff} [%t] %-5p %c - %m%n"  />
    </layout>
  </appender>
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file value="server.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
    </layout>
  </appender>
  <logger name="NHibernate" additivity="false">
    <level value="DEBUG" />
    <!-- <appender-ref ref="empty" /> -->
    <appender-ref ref="NHibernateFileLog" />
  </logger>
</log4net>